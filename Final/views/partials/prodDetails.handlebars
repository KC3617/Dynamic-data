<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{this.image}}" class="img-fluid rounded-start" alt="{{this.name}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <h6 class="card-text">{{this.description}}</h6>
        <h5 class="card-text">${{this.price}}</h5>
      </div>
    </div>
  </div>
</div>